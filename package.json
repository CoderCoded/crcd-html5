{
  "private": true,
  "name": "crcd-html5",
  "description": "Coder Coded HTML5 Boilerplate",
  "author": "CoderCoded",
  "license": "MIT",
  "version": "0.1.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/crcd/crcd-html5"
  },
  "homepage": "https://www.codercoded.com",
  "keywords": [
    "pepper",
    "pixi.js",
    "webpack",
    "babel"
  ],
  "main": "build/app.js",
  "scripts": {
    "build-static": "node ./node_modules/better-npm-run build-static",
    "build-static-dev": "node ./node_modules/better-npm-run build-static-dev",
    "build-babel": "babel src --out-dir build --presets env,stage-2 --ignore client",
    "build-clean": "node ./node_modules/better-npm-run build-clean",
    "build-copy": "node ./node_modules/better-npm-run build-copy",
    "build-webpack": "webpack --verbose --colors --display-error-details --config webpack.config.production.js",
    "build-webpack-dll": "webpack --config webpack.dll.js",
    "build": "npm run build-clean; npm run build-copy; npm run build-babel; npm run build-webpack; npm run build-static",
    "dev": "parallelshell --kill-others \"npm run build-static-dev\" \"npm run webpack-dev\" \"npm run start-dev\"",
    "start": "parallelshell --kill-others \"npm run start-prod\"",
    "start-prod": "node ./node_modules/better-npm-run start-prod",
    "start-dev": "node ./node_modules/better-npm-run start-dev | ./node_modules/pino/pretty.js",
    "test": "karma start",
    "webpack-dev": "npm run build-webpack-dll; node ./node_modules/better-npm-run webpack-dev"
  },
  "betterScripts": {
    "build-clean": {
      "command": "node babel-hook.js",
      "env": {
        "NODE_ENV": "production",
        "BABEL_SOURCE": "./build-clean"
      }
    },
    "build-copy": {
      "command": "node babel-hook.js",
      "env": {
        "NODE_ENV": "production",
        "BABEL_SOURCE": "./build-copy"
      }
    },
    "build-static": {
      "command": "node babel-hook.js",
      "env": {
        "NODE_ENV": "production",
        "NODE_CONFIG_DIR": "./src/config",
        "HOST": "localhost",
        "PORT": 3000,
        "BABEL_SOURCE": "./build-static"
      }
    },
    "build-static-dev": {
      "command": "supervisor -q -n exit -e html -w src/static-views node babel-hook.js",
      "env": {
        "NODE_ENV": "development",
        "NODE_CONFIG_DIR": "./src/config",
        "HOST": "localhost",
        "PORT": 3000,
        "WEBPACK_HOST": "localhost",
        "WEBPACK_PORT": 3001,
        "BABEL_SOURCE": "./build-static"
      }
    },
    "start-dev": {
      "command": "supervisor -q -e html,js -w src -i src/client,src/static-views node babel-hook.js",
      "env": {
        "NODE_ENV": "development",
        "NODE_CONFIG_DIR": "./src/config",
        "HOST": "localhost",
        "PORT": 3000,
        "WEBPACK_HOST": "localhost",
        "WEBPACK_PORT": 3001,
        "BABEL_SOURCE": "./src/app"
      }
    },
    "start-prod": {
      "command": "node build/app.js",
      "env": {
        "NODE_CONFIG_DIR": "./build/config",
        "NODE_ENV": "production",
        "HOST": "localhost",
        "PORT": 8080
      }
    },
    "webpack-dev": {
      "command": "node babel-hook.js",
      "env": {
        "UV_THREADPOOL_SIZE": 100,
        "NODE_ENV": "development",
        "HOST": "localhost",
        "PORT": 3001,
        "BABEL_SOURCE": "./webpack.dev-server"
      }
    }
  },
  "dependencies": {
    "array-find": "^1.0.0",
    "babel-polyfill": "^6.20.0",
    "babel-register": "^6.18.0",
    "babel-runtime": "^6.20.0",
    "better-npm-run": "^0.0.14",
    "bluebird": "^3.4.7",
    "compression": "^1.6.2",
    "config": "^1.24.0",
    "cuid": "^1.3.8",
    "debug": "^2.6.0",
    "express": "^4.14.0",
    "http-codes": "^1.0.0",
    "js-yaml": "^3.7.0",
    "keycode": "^2.1.8",
    "nunjucks": "^3.0.0",
    "pino": "^3.1.1",
    "serve-favicon": "^2.3.2",
    "serve-static": "^1.11.1"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.0",
    "autoprefixer": "^6.6.1",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-generator": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-preset-env": "^1.1.8",
    "babel-preset-stage-2": "^6.18.0",
    "chai": "^3.5.0",
    "clean-webpack-plugin": "^0.1.15",
    "css-loader": "^0.26.1",
    "del": "^2.2.2",
    "es6-promise": "^4.0.5",
    "eslint": "^3.13.1",
    "eslint-config-standard": "^6.2.1",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-riot": "^0.1.6",
    "eslint-plugin-standard": "^2.0.1",
    "exports-loader": "^0.6.3",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "history": "^4.5.1",
    "html-loader": "^0.4.4",
    "html-webpack-plugin": "^2.26.0",
    "json-loader": "^0.5.4",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "parallelshell": "^2.0.0",
    "postcss": "^5.2.9",
    "postcss-import": "^9.1.0",
    "postcss-loader": "^1.2.2",
    "precss": "^1.4.0",
    "purecss": "^0.6.2",
    "redux": "^3.6.0",
    "redux-thunk": "^2.1.0",
    "reload": "^1.1.0",
    "replace-in-file": "^2.0.3",
    "reselect": "^2.5.4",
    "riot": "^3.0.7",
    "riot-observable": "^3.0.0",
    "strip-loader": "^0.1.2",
    "style-loader": "^0.13.1",
    "supervisor": "^0.12.0",
    "url-loader": "^0.5.7",
    "walk": "^2.3.9",
    "webpack": "^1.14.0",
    "webpack-dev-middleware": "^1.9.0",
    "webpack-hot-middleware": "^2.15.0",
    "webpack-sources": "^0.1.3"
  },
  "engines": {
    "node": ">=4.5.0"
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "__DEVELOPMENT__",
      "APP_NAME",
      "CONFIG",
      "riot",
      "log"
    ]
  }
}
